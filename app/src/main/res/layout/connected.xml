<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/black_overlay"
tools:context=".FullscreenActivity">

<!-- The primary full-screen view. This can be replaced with whatever view
     is needed to present your content, e.g. VideoView, SurfaceView,
     TextureView, etc. -->
<TextView android:id="@+id/fullscreen_content" android:layout_width="match_parent"
    android:layout_height="match_parent" android:keepScreenOn="true" android:textColor="#33b5e5"
    android:textStyle="bold" android:textSize="50sp" android:gravity="center"
    android:background="#FFF" />


    <LinearLayout android:id="@+id/fullscreen_content_controls" style="?metaButtonBarStyle"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@color/black_overlay" android:orientation="horizontal"
        tools:ignore="UselessParent">

    </LinearLayout>

    <Button android:id="@+id/band_button" style="?metaButtonBarButtonStyle"
        android:layout_width="225dp" android:layout_height="114dp"
        android:layout_weight="1"
        android:text="Band Connected" android:textSize="30dp"
        android:textColor="@color/black_overlay"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="121dp"
        android:allowUndo="false"
        android:background="#FFF"
        android:layout_below="@+id/fullscreen_content_controls"
        android:layout_alignLeft="@+id/myo_button"
        android:layout_alignStart="@+id/myo_button" />

    <Button android:id="@+id/myo_button" style="?metaButtonBarButtonStyle"
        android:layout_width="225dp" android:layout_height="114dp"
        android:layout_weight="1"
        android:text="Myo Connected" android:textSize="30dp"
        android:textColor="@color/black_overlay"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="82dp"
        android:layout_below="@+id/band_button"
        android:layout_centerHorizontal="true"
        android:background="#FFF" />



</RelativeLayout>
